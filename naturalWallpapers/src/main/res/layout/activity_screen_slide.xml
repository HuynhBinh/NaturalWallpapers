<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            />



        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="right"
            >



            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/btnDownload"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/download_white_48"
                fab:fab_colorNormal="#CB4A62"
                fab:fab_colorPressed="#444444"
                fab:fab_colorRipple="#444444"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="5dp"
                />


            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/btnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/star_white_48"
                fab:fab_colorNormal="#CB4A62"
                fab:fab_colorPressed="#444444"
                fab:fab_colorRipple="#444444"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">


        <Button
            android:id="@+id/btnSetWallpaper"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_black_nocorner_background"
            android:text="Set Wallpaper"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone"/>

        <Button

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_black_nocorner_background"
            android:text="Download"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone"/>

        <Button

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/button_black_nocorner_background"
            android:text="Favorite"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnlAdmob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>