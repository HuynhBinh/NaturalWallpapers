<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#2c3136"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingTop="?attr/actionBarSize"
                    android:scaleType="fitCenter"
                    android:src="@drawable/loading"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="right|bottom"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <ImageView
                        android:id="@+id/imgFavorite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="5dp"
                        android:padding="3dp"
                        android:src="@drawable/favorite"
                        android:visibility="gone"/>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:background="#ffffff"
                    android:visibility="invisible"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/txtOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgAvatar"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtLicense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOwnerName"
                    android:layout_gravity="right"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/imgAvatar"
                    android:textColor="#efefef"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txtOwnerUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLicense"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/imgAvatar"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#1E90FF"
                    android:textSize="10sp"/>



            </RelativeLayout>

            <ImageView
                android:visibility="visible"
                android:id="@+id/imgExpander"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_find_next_holo_dark"/>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#999999"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:paddingBottom="60dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>